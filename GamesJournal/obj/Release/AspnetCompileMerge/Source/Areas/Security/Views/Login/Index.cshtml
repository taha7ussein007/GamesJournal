@model BOL.userLogin

@{
    ViewBag.Title = "Index";
}
<br /><br /><br /><br />
<h2>Login</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @TempData["Msg"].ToString()
    </div>
}

<div class="container">
    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2 control-label" for="LoginKey">Username/Email: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LoginKey, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 control-label" for="Password">Password: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" , type="password" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 control-label" for="RememberMe">Remember me? </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { @class = "checkbox", style = "min-height: 38px; width: 20px;" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="SignIn" class="btn btn-primary" />
                    @*(Or) @Html.ActionLink("Login With GMail", "ExternalLogin", "Login", new { provider = "google" }, null)*@
                    (Or) @Html.ActionLink("Login With Facebook", "ExternalLogin", "Login", new { provider = "facebook" }, null)
                </div>
            </div>
        </div>
    }

</div>
