@model BOL.article


@foreach (var item in Model.comments)
{
    <!-- Comment -->
    <div class="media">
        <a class="pull-left" href="#">
            @if (true) 
            {
                var  avatar = "data:image/bitmap;base64," + Convert.ToBase64String(item.user.profile_picture);
                <img class="media-object" src="@avatar" alt="" style="width:64px !important; height:64px !important">
            }
        </a>
        <div class="media-body">
            <h4 class="media-heading">
                @item.user.name
                <small>@item.timestamp</small>
            </h4>
            @item.content
        </div>
    </div>
}

